import { length, toUpperCase } from './strings.js';

const upperStr = (str) => {
  let result = '';
  for (let i = 0; i < length(str); i += 1) {
    if (i === 0 || str[i - 1] === " ") {
      result = result + toUpperCase(str[i]);
      } else {
      result = result + str[i];
      }
      console.log (result);
      }
      return result;
      };

export default upperStr;
